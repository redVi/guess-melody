.main--result
  justify-content: flex-start
  text-align: center
  margin-top 5em
  .title
    margin-bottom: 1em

.main-stat
  color: $color-text-dark
  margin-top 3em
  margin-bottom: 1em
  font: italic 300 1.2em / 1.3 $font

.main-comparison
  color: $color-text-dark
  font-size: 0.9em
  font-weight: 300
