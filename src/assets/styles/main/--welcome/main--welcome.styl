.main--welcome
  padding-top: 10em
  .text
    text-align: center
    width: 80%

.main-play
  background: transparent
  border-color: transparent
  border-left-color: $color-orange
  border-style: solid
  border-width: 70px 0 70px 100px
  font-size: 0
  height: 0
  margin-left 32px
  margin-bottom 54px
  padding: 0
  text-indent: -100em
  transform-origin: center
  width: 0

.main-play:hover
  transform: scale(1.05)

.main-play:active
  transform: scale(1.04)
